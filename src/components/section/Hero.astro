<Section>
    <div class="container">
        <div class="info">
            <h1>{Nombres}</h1>
            <h1>{Apellidos}</h1>
            <h2>{Etiqueta}</h2>
            
            <span>
                <World />
                
               {Pais}, {Ciudad}
            </span>
            <footer>
                {
                   CorreoElectronico &&  (
                     
                      <a
                     href={`mail: ${CorreoElectronico}`}
                     title={`Enviar correo electrÃ³nico a ${Nombres} al correo ${CorreoElectronico}`}
                     target="_blank"
                     rel="nooponer noreferrer"
                     >
                     <Mail />
                     </a>
                    )
                }
                {
                    Telefono &&  (
                      
                       <a
                      href={`tel: ${Telefono}`}
                      title={`Llmar a: ${Nombres} al numero ${Telefono}`}
                      target="_blank"
                      rel="nooponer noreferrer"
                      >
                      <Phone />
                      </a>
                     )
                }

                 {
                    profiles.map(({ network, url, username }) => {
                     const Icon = RedesSociales[network]

                     return (
                     <a
                      href={url}
                     title={`Visitar el perfil de ${username} en ${network}`}
                     target="_blank"
                     rel="noopener noreferrer">
